# Application
APP_ENV=development
APP_DEBUG=false
# IMPORTANT: Generate secure secrets with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=GENERATE_A_SECURE_SECRET_KEY_MIN_32_CHARS
API_URL=http://localhost:8000

# Database
# IMPORTANT: Change default credentials before deploying
DATABASE_URL=postgresql+asyncpg://codeproof_user:CHANGE_THIS_PASSWORD@localhost:5432/codeproof
DATABASE_POOL_SIZE=10

# Redis
REDIS_URL=redis://localhost:6379/0

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=code_embeddings

# GitHub App
# Get these from your GitHub App settings
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_WEBHOOK_SECRET=

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT
# IMPORTANT: Generate secure secrets with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=GENERATE_A_SECURE_JWT_SECRET_MIN_32_CHARS
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# CORS
CORS_ORIGINS=["http://localhost:3000"]
